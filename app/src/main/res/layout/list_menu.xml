<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/TimKiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/background_search"
            >

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_menu"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_below="@+id/TimKiem"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_menu"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="5dp"
        >
        <Button
            android:id="@+id/btn_HuyBo"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="HỦY BỎ"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:background="@drawable/background_btn_huybo"
            />
        <Button
            android:id="@+id/btn_DongY"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="ĐỒNG Ý"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:background="@drawable/bacground_btn_dongy"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"

            />
    </LinearLayout>
</RelativeLayout>